<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="dynamic" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="Amasty_PromoCountdown/js/countdown" xsi:type="array">
                                <item name="path" xsi:type="string">Amasty_PromoCountdown/js/countdown</item>
                            </item>
                            <item name="Amasty_PromoCountdown/js/design/circle" xsi:type="array">
                                <item name="path" xsi:type="string">Amasty_PromoCountdown/js/design/circle</item>
                            </item>
                            <item name="Amasty_PromoCountdown/js/design/progress" xsi:type="array">
                                <item name="path" xsi:type="string">Amasty_PromoCountdown/js/design/progress</item>
                            </item>
                            <item name="Amasty_PromoCountdown/js/design/round" xsi:type="array">
                                <item name="path" xsi:type="string">Amasty_PromoCountdown/js/design/round</item>
                            </item>
                            <item name="Swissup_BreezeAmastyPromoCountdown/js/countdown-mixin" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeAmastyPromoCountdown/js/countdown-design-mixin</item>
                                <item name="mixins" xsi:type="array">
                                    <item name="circle" xsi:type="string">Amasty_PromoCountdown/js/design/circle</item>
                                    <item name="progress" xsi:type="string">Amasty_PromoCountdown/js/design/progress</item>
                                    <item name="round" xsi:type="string">Amasty_PromoCountdown/js/design/round</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="breeze.container">
            <block class="Swissup\Breeze\Block\HtmlTemplate" template="Amasty_PromoCountdown::countdown.html"/>
            <block class="Swissup\Breeze\Block\HtmlTemplate" template="Amasty_PromoCountdown::design/default.html"/>
            <block class="Swissup\Breeze\Block\HtmlTemplate" template="Amasty_PromoCountdown::design/circle.html"/>
            <block class="Swissup\Breeze\Block\HtmlTemplate" template="Amasty_PromoCountdown::design/honeycomb.html"/>
            <block class="Swissup\Breeze\Block\HtmlTemplate" template="Amasty_PromoCountdown::design/progress.html"/>
            <block class="Swissup\Breeze\Block\HtmlTemplate" template="Amasty_PromoCountdown::design/round.html"/>
            <block class="Swissup\Breeze\Block\HtmlTemplate" template="Amasty_PromoCountdown::design/transparent.html"/>
        </referenceContainer>
    </body>
</page>
